#!/usr/bin/env sh

vendor/bin/rector process src --level code-quality --dry-run &&
vendor/bin/rector process src --level coding-style --dry-run &&
vendor/bin/rector process src --level doctrine --dry-run &&
vendor/bin/rector process src --level doctrine25 --dry-run &&
vendor/bin/rector process src --level framework-extra-bundle-30 --dry-run &&
vendor/bin/rector process src --level framework-extra-bundle-50 --dry-run &&
vendor/bin/rector process src --level php71 --dry-run &&
vendor/bin/rector process src --level phpstan --dry-run &&
vendor/bin/rector process src --level symfony42 --dry-run &&
# Temporary disabled until https://github.com/thecodingmachine/safe/issues/116 is resolved
# vendor/bin/rector process src --config vendor/thecodingmachine/safe/rector-migrate.yml --dry-run &&
vendor/bin/php-cs-fixer fix --allow-risky yes --dry-run -v &&
vendor/bin/phpstan analyse src -c phpstan.neon --level max &&
vendor/bin/phan --progress-bar &&
composer validate --strict --no-check-lock &&
composer outdated &&
vendor/bin/security-checker security:check
